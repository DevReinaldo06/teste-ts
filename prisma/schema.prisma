datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  isAdmin   Boolean  @default(false)
}

model AdminConfig {
  id           Int    @id @default(1)
  adminKeyHash String
}

model Card {
  id               Int      @id @default(autoincrement())
  nome             String
  imagem           String
  imagemRevelada   String
  tipo             String
  nivel            Int
  classe           String
}
