// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  // A URL deve ser lida do .env diretamente pelo Prisma CLI:
  url      = env("DATABASE_URL")
}

generator client {
  // Na v6, o provider padrão é 'prisma-client-js', mas 'prisma-client' também funciona.
  provider = "prisma-client-js" 
}

// ... Seus modelos permanecem os mesmos: User, AdminConfig, Card
model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  isAdmin   Boolean @default(false)
}

model AdminConfig {
  id           Int    @id @default(1)
  adminKeyHash String
}

model Card {
  id             Int     @id @default(autoincrement())
  nome           String
  imagem         String
  imagemRevelada String
  tipo           String
  nivel          Int
  classe         String
}