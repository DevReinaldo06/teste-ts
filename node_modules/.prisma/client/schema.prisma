generator client {
  provider   = "prisma-client-js"
  engineType = "binary" // Manter para estabilidade do tsx
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  nome  String
  idade Int
  email String @unique

  @@map("users")
}

model Card {
  id     Int    @id @default(autoincrement())
  imagem String
  tipo   String
  nivel  Int
  classe String
}
